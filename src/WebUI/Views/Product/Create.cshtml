@model Shop.Web.Models.Products.ProductViewModel

@{ ViewData["title"] = "Create";
}

<div style="padding:150px">

    <h1>Create</h1>

    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">

            <form asp-controller="Product" asp-action="Create" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="ShortDescription" class="control-label"></label>
                    <input asp-for="ShortDescription" class="form-control" />
                </div>

    
                <div class="form-group">
                    <label asp-for="FullDescription" class="control-label"></label>
                    <input asp-for="FullDescription" class="form-control" />
                </div>

                 <div class="form-group">
                    <label asp-for="Sku" class="control-label"></label>
                    <input asp-for="Sku" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="StockQuantity" class="control-label"></label>
                    <input type="number" asp-for="StockQuantity" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input type="number" asp-for="Price" class="form-control" />
                </div>

               
                  <label asp-for="ShowOnHomePage" class="control-label">Show on Home Page</label>
                <div>
                 <input type="radio" asp-for="ShowOnHomePage" value="No"  checked />
                  <label for="ShowOnHomePage">No</label>
                </div>

                <div>
                   <input type="radio" asp-for="ShowOnHomePage" value="Yes"  />
                  <label asp-for="ShowOnHomePage" >Yes</label>
                </div>



                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input type="file" asp-for="ImageFile" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>



</div>